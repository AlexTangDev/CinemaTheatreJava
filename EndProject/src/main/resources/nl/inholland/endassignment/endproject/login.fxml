<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.inholland.endassignment.endproject.controllers.LoginController">

    <!-- Layout for login form -->
    <VBox alignment="CENTER" spacing="10" prefWidth="380" layoutX="10" layoutY="50">
        <TextField fx:id="usernameField" promptText="Username" />
        <PasswordField fx:id="passwordField" promptText="Password" />
        <Button onAction="#login" text="Login" />
        <Label fx:id="errorLabel" textFill="RED" wrapText="true" maxWidth="360" />
    </VBox>
</AnchorPane>
