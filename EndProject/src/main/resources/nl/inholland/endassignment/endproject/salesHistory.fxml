<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="10" style="-fx-padding: 10;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.inholland.endassignment.endproject.controllers.SalesHistoryController">

    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Sales History" />

    <TableView fx:id="salesTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="customerColumn" text="Customer" />
            <TableColumn fx:id="showingColumn" text="Showing" />
            <TableColumn fx:id="startTimeColumn" text="Start Time" />
            <TableColumn fx:id="endTimeColumn" text="End Time" />
            <TableColumn fx:id="seatsColumn" text="Seats" />
        </columns>
    </TableView>
    <Button fx:id="exportButton" onAction="#onExportCustomers" text="Export customers" />

</VBox>
